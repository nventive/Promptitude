{
  "name": "promptitude-extension",
  "displayName": "Promptitude",
  "description": "Sync GitHub Copilot prompts, chatmodes and instructions from git repositories",
  "version": "1.5.3",
  "publisher": "logientnventive",
  "icon":"resources/promptitude-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nventive/promptitude.git",
    "directory": "tools/vscode-extension"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Promptitude",
      "properties": {
        "promptitude.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic synchronization"
        },
        "promptitude.frequency": {
          "type": "string",
          "enum": [
            "startup",
            "hourly",
            "daily",
            "weekly",
            "manual"
          ],
          "default": "daily",
          "description": "Frequency of automatic sync"
        },
        "promptitude.customPath": {
          "type": "string",
          "default": "",
          "description": "Custom prompts directory path (leave empty for default)"
        },
        "promptitude.repositories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Repositories to sync, with optional per-repo branch using the format `https://github.com/owner/repo|branch` or `https://dev.azure.com/organisation/project/_git/repo-name|branch`. If no branch is specified, `main` is used.\n\nExamples:\n- `https://github.com/org/prompt-repo` (uses `main`)\n- `https://github.com/org/prompt-repo|develop`\n- `https://dev.azure.com/organisation/project/_git/repo-name` (uses `main`)\n- `https://dev.azure.com/organisation/project/_git/repo-name|develop`",
          "description": "Repositories to sync. Use format: https://github.com/owner/repo or https://github.com/owner/repo|branch",
          "order": 0
        },
        "promptitude.syncOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Sync when Visual Studio Code starts"
        },
        "promptitude.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show sync status notifications"
        },
        "promptitude.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "promptitude.syncChatmode": {
          "type": "boolean",
          "default": true,
          "description": "Sync agent prompts (supports both agents/ and legacy chatmodes/ directories)",
          "order": 2
        },
        "promptitude.syncInstructions": {
          "type": "boolean",
          "default": false,
          "description": "Sync instructions",
          "order": 3
        },
        "promptitude.syncPrompt": {
          "type": "boolean",
          "default": true,
          "description": "Sync prompts",
          "order": 1
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptitude",
          "title": "Prompts",
          "icon": "resources/promptitude-icon.svg"
        }
      ]
    },
    "views": {
      "promptitude": [
        {
          "id": "promptitude.cards",
          "name": "Prompts",
          "type": "webview",
          "when": "true",
          "icon": "$(list-flat)"
        },
        {
          "id": "promptitude.details",
          "name": "Prompt Details",
          "type": "webview",
          "when": "true",
          "icon": "$(preview)"
        }
      ]
    },
    "commands": [
      {
        "command": "promptitude.syncNow",
        "title": "Sync Now",
        "category": "Promptitude",
        "icon": "$(sync)"
      },
      {
        "command": "promptitude.showStatus",
        "title": "Show Status",
        "category": "Promptitude"
      },
      {
        "command": "promptitude.openPromptsFolder",
        "title": "Open Prompts Folder",
        "category": "Promptitude"
      },
      {
        "command": "promptitude.cleanupOrphanedPrompts",
        "title": "Clean Up Orphaned Prompts",
        "category": "Promptitude",
        "icon": "$(trash)"
      },
      {
        "command": "promptitude.addAzureDevOpsPAT",
        "title": "Add Azure DevOps Personal Access Token",
        "category": "Promptitude"
      },
      {
        "command": "promptitude.clearAzureDevOpsPAT",
        "title": "Remove Azure DevOps Personal Access Token(s)",
        "category": "Promptitude"
      },
      {
        "command": "promptitude.clearAzureDevOpsCache",
        "title": "Clear Azure DevOps Authentication Cache",
        "category": "Promptitude"
      },
      {
        "command": "prompts.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "prompts.toggleSelection",
        "title": "Toggle Active",
        "icon": "$(check)"
      },
      {
        "command": "prompts.selectAll",
        "title": "Activate All",
        "icon": "$(checklist)"
      },
      {
        "command": "prompts.deselectAll",
        "title": "Deactivate All",
        "icon": "$(close-all)"
      },
      {
        "command": "prompts.editPrompt",
        "title": "Edit Prompt",
        "icon": "$(edit)"
      },
      {
        "command": "prompts.viewPrompt",
        "title": "View Details",
        "icon": "$(eye)"
      },
      {
        "command": "prompts.deletePrompt",
        "title": "Delete Prompt",
        "icon": "$(trash)"
      },
      {
        "command": "prompts.duplicatePrompt",
        "title": "Duplicate Prompt",
        "icon": "$(copy)"
      },
      {
        "command": "prompts.openSettings",
        "title": "Open Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "prompts.refresh",
          "when": "view == promptitude.cards",
          "group": "navigation"
        },
        {
          "command": "promptitude.syncNow",
          "when": "view == promptitude.cards",
          "group": "navigation"
        },
        {
          "command": "prompts.selectAll",
          "when": "view == promptitude.cards",
          "group": "1_selection"
        },
        {
          "command": "prompts.deselectAll",
          "when": "view == promptitude.cards",
          "group": "1_selection"
        },
        {
          "command": "prompts.openSettings",
          "when": "view == promptitude.cards",
          "group": "2_settings"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "typescript": "^5.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0"
  }
}